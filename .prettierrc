{
  "overrides": [
    {
      "plugins": ["prettier-plugin-solidity"],
      "files": "*.sol",
      "options": {
        "printWidth": 120,
        "tabWidth": 4,
        "useTabs": false,
        "singleQuote": false,
        "bracketSpacing": false,
        "explicitTypes": "always"
      }
    },
    {
      "parser": "@typescript-eslint/parser",
      "plugins": [
        "prettier"
      ],
      "files": "*.ts",
      "options": {
        "semi": true,
        "trailingComma": "all",
        "singleQuote": false,
        "printWidth": 120,
        "tabWidth": 4
      }
    }
  ]
}
